{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block informations %}
    <h1 class="jumbotron-heading text-center">Page de connexion</h1><br>
{% endblock %}

{% block main %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger"><strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong></div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('securite_deconnexion') }}">Se déconnecter</a>
        </div>
    {% endif %}

    <div class="row g-3 align-items-center mb-5 mt-5">
        <div class="col-2">
        </div>
        <div class="col-2">
            <strong><label for="inputPseudo">Pseudo ou Email</label></strong>
        </div>
        <div class="col-5">
            <input type="text" value="{{ last_username }}" name="pseudo_or_email" id="inputPseudo" class="form-control" autocomplete="username" required autofocus>
        </div>
    </div>

    <div class="row g-3 align-items-center mb-5">
        <div class="col-2">
        </div>
        <div class="col-2">
           <strong><label for="inputPassword">Mot de passe</label></strong>
        </div>
        <div class="col-5">
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="row g-3 align-items-center mb-4">
        <div class="col-5">
        </div>
        <div class="col-5">
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me" class="mr-3"> <small>Se souvenir de moi</small>
                </label>
            </div>
        </div>
    </div>

    <div class="row g-3 align-items-center mb-5">
        <div class="col-5">
        </div>
        <div class="col-5">
            <button class="btn btn-lg btn-primary mb-5" type="submit">
                Se connecter
            </button>
        </div>
    </div>

