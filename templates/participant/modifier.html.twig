{% endblock %}

{% block main %}

    {{ include('accueil/messageFlash.html.twig') }}

    {% form_theme formCreateParticipant 'bootstrap_5_layout.html.twig' %}

    {{ form_start(formCreateParticipant) }}
        <div class="row g-3 align-items-center mb-4">
            <div class="col-2">
                <strong>{{ form_label(formCreateParticipant.pseudo) }}</strong>
            </div>
            <div class="col-4">
                {{ form_widget(formCreateParticipant.pseudo) }}
                {{ form_errors(formCreateParticipant.pseudo) }}
            </div>
            <div class="col-1">
            </div>
            <div class="col-1">
                <strong>{{ form_label(formCreateParticipant.telephone) }}</strong>
            </div>
            <div class="col-4">
                {{ form_widget(formCreateParticipant.telephone) }}
                {{ form_errors(formCreateParticipant.telephone) }}
            </div>
        </div>
        <div class="row g-3 align-items-center mb-4">
            <div class="col-2">
                <strong>{{ form_label(formCreateParticipant.prenom) }}</strong>
            </div>
            <div class="col-4">
                {{ form_widget(formCreateParticipant.prenom) }}
                {{ form_errors(formCreateParticipant.prenom) }}
            </div>
            <div class="col-1">
            </div>
            <div class="col-1">
                <strong>{{ form_label(formCreateParticipant.email) }}</strong>
            </div>
            <div class="col-4">
                {{ form_widget(formCreateParticipant.email) }}
                {{ form_errors(formCreateParticipant.email) }}
            </div>
        </div>
        <div class="row g-3 align-items-center mb-5">
            <div class="col-2">
                <strong>{{ form_label(formCreateParticipant.nom) }}</strong>
            </div>
            <div class="col-4">
                {{ form_widget(formCreateParticipant.nom) }}
                {{ form_errors(formCreateParticipant.nom) }}
            </div>
            <div class="col-1">
            </div>
            <div class="col-1">
                <strong>{{ form_label(formCreateParticipant.campus) }}</strong>
            </div>
            <div class="col-4">
                {{ form_widget(formCreateParticipant.campus) }}
                {{ form_errors(formCreateParticipant.campus) }}
