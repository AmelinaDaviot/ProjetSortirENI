        </div>

        <div class="row g-3 align-items-center mb-4">
            <div class="col-2">
            </div>
            <div class="col-3">
               <strong> {{ form_label(formCreateParticipant.photo) }}</strong>
            </div>
            <div class="col-5">
                {{ form_widget(formCreateParticipant.photo) }}
                {{ form_errors(formCreateParticipant.photo) }}
            </div>
            <div class="col-2">
            </div>
        </div>

        <div class="row g-3 align-items-center mb-5">
            <div class="col-2">
            </div>
            <div class="col-3">
               <strong> {{ form_label(formCreateParticipant.plainPassword) }}</strong>
            </div>
            <div class="col-5">
                {{ form_widget(formCreateParticipant.plainPassword) }}
                {{ form_errors(formCreateParticipant.plainPassword) }}
            </div>
            <div class="col-2">
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-4 col-md-offset-4 text-center">
        <a href="{{ path('participant_profil', {'pseudo': participant.pseudo }) }}" class="btn btn-primary btn-lg mr-3">
            Retour</a>
            </div>
        <div class="col-md-4 col-md-offset-4 text-center">
        {{ form_row(formCreateParticipant.submit, {'attr': {'class': 'btn btn-success btn-lg mr-3'}}) }}
        </div>
        <div class="col-md-4 col-md-offset-4 text-center">
        <a href="{{ path('participant_modifier_password') }}" class="btn btn-warning btn-lg mr-3">
            Modifier mon mot de passe</a>
        </div>
        </div>

    {{ form_end(formCreateParticipant) }}

